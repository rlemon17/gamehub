<%- include("header") -%>

<h1 id="title">Lemon's Pokedex</h1>
<h1 id="name"><%=name%></h1>
<h5 id="type"><%=types%></h5>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-3">
            <img id="sprite" src=<%=imgUrl%>>
        </div>
        <div class="col-lg-5">
            <p id="dexEntry"><%=dexEntry%></p>
        </div>
    </div>
</div>

<!-- Give links to other forms, if any -->
<% if (hasForms) { %>
    <% formsList.forEach((form) => { %>
        <form class="formForm" action="/pokemon" method="post">
            <input class="formButton" type="submit" name="pokeName" value=<%=form.pokemon.name%>></input>
        </form>
    <% }) %>
<% } %>

<!-- Bootstrap Layout to Center -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-1">
            <p class="hp">HP:</p>
        </div>
        <div class="col-2">
            <span class="box hp"><%=hp%></span>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-1">
            <p class="atk">ATK:</p>
        </div>
        <div class="col-2">
            <span class="box atk"><%=atk%></span>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-1">
            <p class="def">DEF:</p>
        </div>
        <div class="col-2">
            <span class="box def"><%=def%></span>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-1">
            <p class="spatk">SP. ATK:</p>
        </div>
        <div class="col-2">
            <span class="box spatk"><%=spatk%></span>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-1">
            <p class="spdef">SP. DEF:</p>
        </div>
        <div class="col-2">
            <span class="box spdef"><%=spdef%></span>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-1">
            <p class="spd">SPEED:</p>
        </div>
        <div class="col-2">
            <span class="box spd"><%=spd%></span>
        </div>
    </div>

</div>

<form action="/pokemon" method="post">
    <div class="form-group under-stats">
        <label>Pokemon Name or Pokedex Number</label>
        <input type="text" class="form-control" name="pokeName" autocomplete="off" pattern="[a-zA-Z0-9]+"> 
        <button type="submit" class="btn btn-primary">Search Again</button>
    </div> 
</form>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(".box.hp").css("width", "<%=hp%>"*2+"px");
    $(".box.atk").css("width", "<%=atk%>"*2+"px");
    $(".box.def").css("width", "<%=def%>"*2+"px");
    $(".box.spatk").css("width", "<%=spatk%>"*2+"px");
    $(".box.spdef").css("width", "<%=spdef%>"*2+"px");
    $(".box.spd").css("width", "<%=spd%>"*2+"px");
</script>
</body>
<footer>
</footer>
</html>